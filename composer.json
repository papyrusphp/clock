{
    "name": "papyrus/clock",
    "description": "A Clock implementation (inspired by PSR-20) for papyrus/event-sourcing",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "psr-20",
        "clock",
        "event-sourcing",
        "ddd",
        "domain-driven-design",
        "cqrs",
        "papyrus"
    ],
    "authors": [
        {
            "name": "Jeroen de Graaf",
            "email": "hello@jero.work"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.11",
        "maglnet/composer-require-checker": "^4.2",
        "phpro/grumphp-shim": "^1.13",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Papyrus\\Clock\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Papyrus\\Clock\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp-shim": true
        },
        "sort-packages": true
    },
    "scripts": {
        "phpcsfixer": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon"
    }
}
